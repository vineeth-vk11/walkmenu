<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/colorSplashBackground</item>
        <item name="android:navigationBarColor">@color/colorSplashBackground</item>
    </style>

    <style name="TextToolbar">
        <item name="android:background">@color/colorBackgroundAppBar</item>
        <item name="android:textColor">@color/colorTextAppBar</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextHeader">
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSubHeader">
        <item name="android:textColor">@color/colorTextSubHeader</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextServiceInfo">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TextLogout">
        <item name="android:textColor">@color/colorLogout</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTab">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/custom_button1</item>
    </style>




</resources>
